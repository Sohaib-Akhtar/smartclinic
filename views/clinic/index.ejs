  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
    <div class="container-fluid">
      <a class="navbar-brand js-scroll-trigger" href="#page-top"><img src="img/logo.png"></a>
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a class="nav-link js-scroll-trigger" href="#about"><i class='far fa-question-circle'></i> About</a>
            </li>
            <li>
                <a class="nav-link js-scroll-trigger" href="#services"><i class='fas fa-stethoscope'></i> Services</a>
            </li>
            <li>
                <a class="nav-link js-scroll-trigger" href="#team"><i class='fas fa-users'></i> Team</a>
            </li>
            <li>
                <a class="nav-link js-scroll-trigger" href="#contact"><i class='far fa-comments'></i> Contact</a>
            </li>
            <li>
                <a class="nav-link js-scroll-trigger" href="/doctors"><i class="fa fa-user-md"></i> Doctors</a>
            </li>
            <% if (isAuthenticated){ %>
