<!-- Image Slider -->
    <div id="slides" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#slides" data-slide-to="0" class="active"></li>
            <li data-target="#slides" data-slide-to="1"></li>
            <li data-target="#slides" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="img/background2.jpg">
                <div class="carousel-caption">
                    <div class="wow fadeInDown" data-wow-offset="0" data-wow-delay="0.1s">
                        <h1 class="display-2">Smart Clinic</h1>
                    </div>
                    <div class="wow fadeInUp" data-wow-offset="0" data-wow-delay="0.1s">
                        <h3>A Better Connection is a better cure</h3>
                    </div>
                    <% if (!isAuthenticated) { %>
                    <a href="/signup" class="btn btn-outline-light btn-lg wow bounceIn" data-wow-delay="0.2s" role="button"><i class="far fa-id-badge"></i> Sign-Up</a>
                    <!--<button type="button" class="btn btn-outline-light btn-lg">Sign Up</button>-->
                    <a href="/login" class="btn btn-primary btn-lg wow bounceIn" data-wow-delay="0.2s" role="button"><i class='fas fa-sign-in-alt'></i> Login</a>
                    <!--<button type="button" class="btn btn-primary btn-lg">Login</button>-->
                    <% } %>
                </div>
            </div>
            <div class="carousel-item">
                <img src="img/background3.jpg">
                <div class="carousel-caption">
                    <div class="wow fadeInDown" data-wow-offset="0" data-wow-delay="0.1s">
                        <h1 class="display-2">Smart Clinic</h1>
                    </div>
                    <div class="wow fadeInUp" data-wow-offset="0" data-wow-delay="0.1s">
                        <h3>A Better Connection is a better cure</h3>
                    </div>
                    <% if (!isAuthenticated) { %>
                    <a href="/signup" class="btn btn-outline-light btn-lg wow bounceIn" role="button"><i class="far fa-id-badge"></i> Sign-Up</a>
                    <!--<button type="button" class="btn btn-outline-light btn-lg">Sign Up</button>-->
                    <a href="/login" class="btn btn-primary btn-lg wow bounceIn" role="button"><i class='fas fa-sign-in-alt'></i> Login</a>
                    <!--<button type="button" class="btn btn-primary btn-lg">Login</button>-->
                    <% } %>
                </div>
            </div>
            <div class="carousel-item">
                <img src="img/background4.jpg">
                <div class="carousel-caption">
                    <div class="wow fadeInDown" data-wow-offset="0" data-wow-delay="0.1s">
                        <h1 class="display-2">Smart Clinic</h1>
                    </div>
                    <div class="wow fadeInUp" data-wow-offset="0" data-wow-delay="0.1s">
                        <h3>A Better Connection is a better cure</h3>
                    </div>
                    <% if (!isAuthenticated) { %>
                    <a href="/signup" class="btn btn-outline-light btn-lg wow bounceIn" role="button"><i class="far fa-id-badge"></i> Sign-Up</a>
                    <!--<button type="button" class="btn btn-outline-light btn-lg">Sign Up</button>-->
                    <a href="/login" class="btn btn-primary btn-lg wow bounceIn" role="button"><i class='fas fa-sign-in-alt'></i> Login</a>
                    <!--<button type="button" class="btn btn-primary btn-lg">Login</button>-->
                    <% } %>
                </div>
            </div>
            
        </div>
    </div>
<!-- About -->
<section id="about" class="bg-light">
    <div class="container-fluid padding">
        <div class="row about text-center">
            <div class="col-12">
                <div class="wow bounceIn" data-wow-delay="0.2s">
                    <h1 class="display-4">About Us</h1>
                </div>
            </div>
            <hr>
            <div class="col-12">
              <div class="wow fadeInUp" data-wow-delay="0.3s">  
                <p class="lead">Smart Clinic System is a web based service which enables the patients and doctors to connect before meeting in reality :</p>
             </div>
            </div>
        </div>
          
    </div>
    <div class="container-fluid padding">
        <div class="row about text-center padding">
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="wow fadeInUp" data-wow-delay="0.3s">
            <div class="box text-center">
                <i class="fas fa-address-card"></i>
                <h3>Connect</h3>
                <p>Patients can view details of the doctor and make an appointment from home and share their experiences online</p>
            </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="wow fadeInUp" data-wow-delay="0.3s">
            <div class="box text-center">
                <i class="fas fa-praying-hands"></i>
                <h3>Build Relations</h3>
                <p>Doctors can build their own reputation and strengthen relationships between their patients and interact with other doctors as well</p>
            </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="wow fadeInUp" data-wow-delay="0.3s">
            <div class="box text-center">
                <i class="fas fa-heart"></i>
                <h3>Membership</h3>
                <p>Provides a membership based system to all its users.</p>
            </div>
            </div>
        </div>
        </div>
    </div>
  </section>


    <!-- Services -->
  <section id="services">
      <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4 col-md-4">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                  <img src="img/img-1.JPG" class="img-responsive" alt="" />
                </div>
            </div>
            <div class="col-md-8">
                <div class="wow bounceIn text-center" data-wow-delay="0.2s">
                    <h1 class="display-4">Services we offer</h1>
                </div>
                <hr>
                <div class="wow fadeInUp text-center" data-wow-delay="0.3s">
                    <p class="lead">The patients can view details of the doctor and make an appointment from home and share their experiences online. The doctors can build their own reputation and strengthen relationships between their patients and interact with other doctors as well.</p>
                </div>
                <% if (!isDoc){ %>
                    <% if (!isAuthenticated){ %>
                        <div style="text-align: center;">
                            <a href="/login" class="btn btn-outline-dark btn-lg wow bounceInDown" role="button">Make an Appointment <i class="fa fa-angle-right"></i></a>
                        </div>
                    <% } else{ %>
                        <div style="text-align: center;">
                            <a href="/appointment" class="btn btn-outline-dark btn-lg wow bounceInDown" role="button">Make an Appointment <i class="fa fa-angle-right"></i></a>
                        </div>
                    <% } %>
                <% } %>         
            </div>
        </div>
    </div>
  </section>
    
<!-- team -->
<section id="team" class="bg-light">
    <div class="container-fluid padding">
        <div class="row team text-center">
            <div class="col-12">
                <div class="wow lightSpeedIn" data-wow-delay="0.2s">
                    <h1 class="display-4">Our Team</h1>
                </div>
            </div>
            <hr> 
        </div>
    </div>
    <br>
    <br>
    <!-- Cards -->
    <div class="container-fluid padding">
        <div class="row padding">
            <div class="col-md-4">
                <div class="wow bounceInRight" data-wow-delay="0.3s">
                    <div class="card">
                        <img class="card-img-top" src="img/zuko.JPG">
                        <div class="card-body">
                            <h4 class="card-title">Dr. Zuko</h4>
                            <p class="card-text">Dr. Zuko is the best doctor in the world and saved so many lives.</p>
                            <a href="#" class="btn btn-outline-secondary">See Profile</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="wow bounceInUp" data-wow-delay="0.3s">
                    <div class="card">
                        <img class="card-img-top" src="img/hamza.png">
                        <div class="card-body">
                            <h4 class="card-title">Dr. Hamza</h4>
                            <p class="card-text">Dr. Hamza help depressed people.</p>
                            <a href="#" class="btn btn-outline-secondary">See Profile</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="wow bounceInLeft" data-wow-delay="0.3s">
                    <div class="card">
                        <img class="card-img-top" src="img/bhai.png">
                        <div class="card-body">
                            <h4 class="card-title">Dr. Bhai</h4>
                            <p class="card-text">Dr. Bhai is expert in killing people.</p>
                            <a href="#" class="btn btn-outline-secondary">See Profile</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>
    
<!-- Contact -->
  <section id="contact">
      <div class="container-fluid padding">
        <div class="row contact text-center">
            <div class="col-12">
                <div class="wow bounceIn" data-wow-delay="0.2s">
                    <h1 class="display-4">Contact us</h1>
                </div>
            </div>
            <hr>
            <div class="col-12">
                <div class="wow fadeInUp" data-wow-delay="0.3s">
                    <p class="lead">If you have any questions, please feel free to contact us at smartclinicfeedback@gmail.com.</p>
                </div>
            </div>
        </div>
      </div>
  </section>

  <!-- Footer -->
  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Smart Clinic 2020</p>
    </div>
