                    <a class="nav-link js-scroll-trigger" href="/membership"><i class='far fa-gem'></i> Membership</a>
                </li>
                <% } %>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <form action="/logout" method="POST" id="fileForm" role="form">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>"> 
                            <input class="btn btn-danger navbar-btn" type="submit" name="submit_reg" value="Logout">
                        </form>
                    </li>
                </ul>
            <% } %>
        </ul>
    </div>
