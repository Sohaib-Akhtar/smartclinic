    }
    else
    {
    document.getElementById("statusDOB").innerHTML	= "<span class='valid'>Thanks, you have entered a valid Date!</span>"; 
    }
    
}
// validate time
function time_validate(time)
{
    var regTime=/^[0-2][0-9]:[0-5][0-9]$/;
    if(regTime.test(time)==false)
